<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/navigation_home">
  <fragment
      android:id="@+id/navigation_home"
      android:name="com.example.kotlinnavigationsample.bottomnav.BottomNavFragment"
      android:label="Home"
      tools:layout="@layout/fragment_bottom_nav">
    <argument
        android:name="icon_id"
        android:defaultValue="@mipmap/ic_launcher_round"/>
    <argument
        android:name="label"
        android:defaultValue="Home"/>
  </fragment>

  <fragment
      android:id="@+id/navigation_dashboard"
      android:name="com.example.kotlinnavigationsample.bottomnav.BottomNavFragment"
      android:label="Dashboard"
      tools:layout="@layout/fragment_bottom_nav">
    <argument
        android:name="icon_id"
        android:defaultValue="@mipmap/ic_launcher_round"/>
    <argument
        android:name="label"
        android:defaultValue="Dashboard"/>
  </fragment>

  <fragment
      android:id="@+id/navigation_notifications"
      android:name="com.example.kotlinnavigationsample.bottomnav.BottomNavFragment"
      android:label="Notification"
      tools:layout="@layout/fragment_bottom_nav">
    <argument
        android:name="icon_id"
        android:defaultValue="@mipmap/ic_launcher_round"/>
    <argument
        android:name="label"
        android:defaultValue="Notification"/>
  </fragment>
</navigation>